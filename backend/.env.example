# Backend Environment Variables (.env)
# Copy this file to .env and fill in your actual values

# PostgreSQL Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/aevalo
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_ACQUIRE_TIMEOUT_SECS=5
DB_IDLE_TIMEOUT_SECS=300
DB_MAX_LIFETIME_SECS=1800

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_API_KEY=your-api-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-key

# JWT Configuration
JWT_SECRET=your-very-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRY_SECONDS=3600

# Server Configuration
SERVER_PORT=3000
SERVER_HOST=0.0.0.0
ENVIRONMENT=development

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Security Configuration
REQUIRE_HTTPS=false
HSTS_MAX_AGE=31536000

# Session Configuration
SESSION_MAX_AGE_SECONDS=2592000
SESSION_INACTIVITY_TIMEOUT_SECONDS=1800
MAX_CONCURRENT_SESSIONS=5

# API Configuration
API_TIMEOUT_SECONDS=30

# Logging
RUST_LOG=debug,sqlx=info,axum=info

# AI/Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-if-needed

# Email Configuration (Optional)
MAIL_SERVICE=smtp
MAIL_FROM=noreply@aevalo.com
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
